alias kc='kubectl'

function kcsh {
  if [ "$2" != "" ]; then
    kc exec $1 -c $2 --tty -i -- env COLUMNS=$COLUMNS ROWS=$ROWS TERM=$TERM sh
  else
    kc exec $1 --tty -i -- env COLUMNS=$COLUMNS ROWS=$ROWS TERM=$TERM sh
  fi
}

function mkpod {
  kc run $1 --generator=run-pod/v1 --image=jmhobbs/debug-box:v3 -- sleep 86400
}
